<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Author</th>
      <th>Title</th>
      <th>Publisher</th>
      <th>Volume</th>
      <th>Number</th>
      <th>Series</th>
      <th>Address</th>
      <th>Edition</th>
      <th>Year</th>
      <th>Month</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= book.author %></td>
        <td><%= book.title %></td>
        <td><%= book.publisher %></td>
        <td><%= book.volume %></td>
        <td><%= book.number %></td>
        <td><%= book.series %></td>
        <td><%= book.address %></td>
        <td><%= book.edition %></td>
        <td><%= book.year %></td>
        <td><%= book.month %></td>
        <td><%= book.note %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

