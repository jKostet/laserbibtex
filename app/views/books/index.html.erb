<h1>Books</h1>

<table class="table">
  <thead>
    <tr>
      <th>Reference</th>
      <th>Author</th>
      <th>Title</th>
      <th>Publisher</th>
      <th>Volume</th>
      <th>Number</th>
      <th>Series</th>
      <th>Address</th>
      <th>Edition</th>
      <th>Year</th>
      <th>Month</th>
      <th>Note</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.reference %></td>
        <td><%= book.author %></td>
        <td><%= book.title %></td>
        <td><%= book.publisher %></td>
        <td><%= book.volume %></td>
        <td><%= book.number %></td>
        <td><%= book.series %></td>
        <td><%= book.address %></td>
        <td><%= book.edition %></td>
        <td><%= book.year %></td>
        <td><%= book.month %></td>
        <td><%= book.note %></td>
        <td>
          <% if book.tags %>
              <%  book.tags.split(", ").each do |tag| %>
                  <span class="label label-primary"> <%= tag %></span>
                  <span> </span>
              <% end %>
          <% end %>
        </td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Book', new_book_path %>
